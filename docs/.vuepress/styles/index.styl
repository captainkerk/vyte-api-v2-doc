@require '~vuepress-plugin-tabs/dist/themes/default.styl'

.sidebar
  width: 15rem;

.page
  padding-left: 15rem;

.home .hero img
  max-width 450px!important

div.theme-default-content:not(.custom)
    max-width: 100%;

div.page-nav
  max-width: 100%;

footer.page-edit
  max-width: 100%;

.parent
  display: flex;
  flex-wrap: wrap;

.left
  width: 55%;
  padding: 10px;
  position: sticky;
  top: 3.6rem;
  flex-grow: 1;
  align-self: flex-start;

.right
  width: 40%;
  padding: 10px;
  position: sticky;
  top: 3.6rem;
  flex-grow: 1;
  align-self: flex-start;

@media (max-width: 719px){  
  .page {
    padding-left: 0;
  }

  .left{
    position: relative;
    width: 100%;
    padding: 0;
    top: 0;
    flex-grow: 1;
    align-self: flex-start;
  }

  .right{
    position: relative;
    width: 100%;
    padding: 0;
    top: 0;
    flex-grow: 1;
    align-self: flex-start;
  }
}