.sidebar
  width: 15rem;

.page
  padding-left: 15rem;

.home .hero img
  max-width 450px!important

footer.page-edit,
div.page-nav,
div.theme-default-content:not(.custom)
  max-width: 80%;

.parent
  display: flex;
  flex-wrap: wrap;

.left
  width: 50%;
  position: sticky;
  top: 3.6rem;
  flex-grow: 1;
  align-self: flex-start;
  margin-right: 5vw;

.right
  width: 40%;
  padding: 10px;
  position: sticky;
  top: 3.6rem;
  flex-grow: 1;
  align-self: flex-start;

@media (max-width: 719px){  
  .page {
    padding-left: 0;
  }

  .left{
    position: relative;
    width: 100%;
    padding: 0;
    top: 0;
    flex-grow: 1;
    align-self: flex-start;
  }

  .right{
    position: relative;
    width: 100%;
    padding: 0;
    top: 0;
    flex-grow: 1;
    align-self: flex-start;
  }
